@{
}

@model ToDoList

@using (Html.BeginForm("UpdateList", "ToDo"))
{
    <h1>@Html.DisplayFor(m => Model.Name)</h1>
    <table>
        <thead>
            <tr>
                <th>
                    Task
                </th>
                <th>
                    Completed
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Tasks)
            {
                <tr>
                    <td>

                        @Html.DisplayFor(modelItem => item.ToDoTask)

                    </td>

                    <td>
                        <div class="form-group">
                            @Html.EditorFor(m => item.IsCompleted)
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}